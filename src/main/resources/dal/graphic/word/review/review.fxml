      </Button>
   </left>
   <right>
      <Button fx:id="nextButton" mnemonicParsing="false" onAction="#next" text="Next" BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </Button>
   </right>
   <bottom>
      <HBox fx:id="hintHBox" alignment="CENTER" spacing="42.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#revealHint" text="Reveal Hint" />
            <Text fx:id="hintText" strokeType="OUTSIDE" strokeWidth="0.0" text="Hint here..." />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
